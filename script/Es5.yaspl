def potenza (in int b, in int e, out int res){
    int i = 1;
    int app = 1;
    
    while(i<=e)do{
        app = app * b;
        i = i +1;
    }
    res = app;
}

def fibonacci(in int num){
  int i = 1, a = -1, b = 1;
  res = 0;
